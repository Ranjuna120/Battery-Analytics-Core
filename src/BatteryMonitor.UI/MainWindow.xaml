<Window x:Class="BatteryMonitor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battery Monitor" Height="560" Width="1000" MinWidth="760" MinHeight="480" Background="{StaticResource AppBackgroundGradient}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Decorative background ellipse -->
        <Ellipse Width="520" Height="520" Fill="{StaticResource AccentLightBrush}" Opacity="0.15" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-180,-160,0" IsHitTestVisible="False"/>
        <!-- Header / Controls -->
    <Border Background="#22FFFFFF" Padding="20" CornerRadius="14" BorderBrush="#40FFFFFF" BorderThickness="1">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Interval" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="IntervalBox" Width="52" Text="5" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Content="Start" Style="{StaticResource PrimaryButton}" Click="Start_Click"/>
                    <Button Content="Stop" Style="{StaticResource SecondaryButton}" Click="Stop_Click"/>
                    <Button Content="Refresh" Style="{StaticResource GhostButton}" Click="Refresh_Click"/>
                    <ToggleButton x:Name="DarkModeToggle" Style="{StaticResource SwitchToggle}" Margin="16,0,0,0" Checked="DarkModeToggle_OnChanged" Unchecked="DarkModeToggle_OnChanged"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Battery Monitor" Style="{StaticResource H1Text}"/>
                    <TextBlock>
                        <Run Text="Status: "/><Run x:Name="StatusInline" Text="Idle"/>
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Left: DataGrid -->
            <Border Background="#30FFFFFF" CornerRadius="14" BorderBrush="#35FFFFFF" BorderThickness="1" Padding="12">
                <DataGrid ItemsSource="{Binding Batteries}" AutoGenerateColumns="False" IsReadOnly="True" EnableRowVirtualization="True" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="70"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                        <DataGridTextColumn Header="Charge %" Binding="{Binding ChargePercent}" Width="70"/>
                        <DataGridTextColumn Header="Remain" Binding="{Binding RemainingCapacity}" Width="70"/>
                        <DataGridTextColumn Header="Full" Binding="{Binding FullChargeCapacity}" Width="70"/>
                        <DataGridTextColumn Header="Health %" Binding="{Binding HealthPct}" Width="70"/>
                        <DataGridTextColumn Header="Volt mV" Binding="{Binding Voltage}" Width="70"/>
                        <DataGridTextColumn Header="Rate mW" Binding="{Binding Rate}" Width="70"/>
                        <DataGridTextColumn Header="Temp Â°C" Binding="{Binding Temperature}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Right: History / KPI Cards -->
            <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Stretch">
        <Border Background="#30FFFFFF" CornerRadius="14" BorderBrush="#35FFFFFF" BorderThickness="1" Padding="14" Margin="0 0 0 16">
                    <StackPanel>
                        <TextBlock Text="Charge History" Style="{StaticResource CardTitle}"/>
            <Border x:Name="ChartHost" Margin="0,10,0,0" CornerRadius="8" Background="#12000000" Padding="6">
                            <Canvas x:Name="HistoryCanvas" Height="140" />
                        </Border>
                        <TextBlock Text="Last 5 minutes" Style="{StaticResource MutedText}" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
        <Border Background="#30FFFFFF" CornerRadius="14" BorderBrush="#35FFFFFF" BorderThickness="1" Padding="14" >
                    <StackPanel>
                        <TextBlock Text="Legend" Style="{StaticResource CardTitle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                <Rectangle Width="14" Height="14" RadiusX="3" RadiusY="3" Fill="{StaticResource AccentBrush}"/>
                                <TextBlock Text=" Charge %" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="14" Height="14" RadiusX="3" RadiusY="3" Fill="{StaticResource DangerBrush}"/>
                                <TextBlock Text=" Alert" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="* Health = Full / Designed capacity" Style="{StaticResource MutedText}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
